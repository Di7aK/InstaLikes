<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
            <corners android:radius="5dp" />
            <gradient android:angle="90" android:startColor="#6120B6" android:endColor="#FF4C29" />
        </shape>
    </item>
    <item android:state_selected="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
            <corners android:radius="5dp" />
            <gradient android:angle="90" android:endColor="#6120B6" android:startColor="#FF4C29" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp" />
            <corners android:radius="5dp" />
            <gradient android:angle="90" android:endColor="#6E46A3" android:startColor="#973521" />
        </shape>
    </item>
</selector>